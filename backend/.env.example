# 淘沙分析平台环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ===========================================
# 数据库配置
# ===========================================

# 开发环境数据库 (SQLite)
DATABASE_URL=sqlite:///./taosha.db

# 生产环境数据库 (MySQL)
# MYSQL_URL=mysql+asyncmy://username:password@localhost:3306/taosha_db

# ===========================================
# JWT认证配置
# ===========================================

# JWT密钥 (生产环境请使用强密钥)
SECRET_KEY=taosha-analyse-platform-secret-key-change-in-production

# 访问令牌过期时间 (分钟)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# LLM配置
# ===========================================

# OpenAI API配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# ===========================================
# 向量数据库配置
# ===========================================

# ChromaDB持久化目录
CHROMA_PERSIST_DIRECTORY=./chroma_db

# ===========================================
# 应用配置
# ===========================================

# 应用名称
APP_NAME=淘沙分析平台

# 调试模式
DEBUG=True

# 允许的主机
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS设置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ===========================================
# 日志配置
# ===========================================

# 日志级别
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/app.log

# ===========================================
# 查询引擎配置
# ===========================================

# 默认查询引擎
DEFAULT_QUERY_ENGINE=duckdb

# 查询超时时间 (秒)
QUERY_TIMEOUT_SECONDS=300

# 最大返回行数
MAX_RESULT_ROWS=10000

# 最大重试次数
MAX_RETRY_COUNT=3

# ===========================================
# WebSocket配置
# ===========================================

# WebSocket连接超时 (秒)
WEBSOCKET_TIMEOUT=3600

# ===========================================
# 文件上传配置
# ===========================================

# 上传文件大小限制 (MB)
MAX_UPLOAD_SIZE=100

# 上传目录
UPLOAD_DIR=./uploads